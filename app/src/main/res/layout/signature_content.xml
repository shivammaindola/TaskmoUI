<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE7D0"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Signature"
    tools:showIn="@layout/activity_signature">

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="36sp"
        android:textColor="#A66753"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Make your digital signature" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-40dp"
        android:background="#FFE7D0"
        android:layout_weight="4"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorFormHint"
                android:text="Make your digital signature here"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="#CAC9C9"
                app:cardBackgroundColor="#EEE6E4E4"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:textColor="#000000"
                        android:text="Sign here*"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF5722"
                android:layout_marginTop="15dp"
                android:text="Note"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#131313"
                android:text="Please use your finger or Stylus for signature"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_corner"
                    android:text="@string/save"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginLeft="33dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
